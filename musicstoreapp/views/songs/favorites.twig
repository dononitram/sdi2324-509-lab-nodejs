{% extends "../layout.twig" %}
{% block title %} Mis publicaciones {% endblock %}
{% block main_container %}
  <h2>Mis favoritos</h2>

  <p>Total: {{ total }}</p>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Nombre</th>
        <th>Fecha</th>
        <th>Precio</th>
        <th class="col-md-1"></th>
      </tr>
      </thead>
      <tbody>
      {% for favorite in favorites %}
        <tr>
          <td>{{ favorite.title }}</td>
          <td>{{ favorite.date }}</td>
          <td>{{ favorite.price }}</td>
          <td>
            <a href="/songs/favorites/delete/{{ favorite._id }}">Eliminar</a> <br>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}