{% extends "layout.twig" %}

{% block title %} Detalles de la canción {% endblock %}

{% block main_container %}

  <div class="row">
    <div class="media col-xs-10">
      <div class="media-left media-middle">
        <img class="media-object" src="/covers/{{ song._id }}.png" alt="Portada {{ song.title }}">
      </div>
      <div class="media-body">
        <h2>{{ song.title }}</h2>
        <p>{{ song.author.email }}</p>
        <p>{{ song.kind }}</p>
        <form class="form-horizontal" method="post" action="/songs/buy/{{ song._id }}">

          {% if purchased %}
            <audio controls>
              <source  src="/audios/{{ song._id}}.mp3" type="audio/mpeg">
            </audio>
          {% else %}
            <button type="submit" class="btn btn-primary">Comprar: {{ song.price }}€</button>
          {% endif %}
        </form>
      </div>
    </div>
  </div>

{% endblock %}